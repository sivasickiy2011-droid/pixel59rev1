# Server Configuration
PORT=3001
NODE_ENV=production

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=pixel_user
DB_PASSWORD=your_strong_password_here
DB_NAME=pixel_db

# JWT Secret
JWT_SECRET=your_jwt_secret_here_generate_random_string

# Admin Password Hash (bcrypt)
ADMIN_PASSWORD_HASH=$2b$10$your_bcrypt_hash_here

# S3/MinIO Configuration
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=pixel-files
S3_PUBLIC_URL=https://cdn.pixel59.ru

# Yandex API Keys
YANDEX_METRIKA_TOKEN=your_yandex_metrika_token
YANDEX_WEBMASTER_TOKEN=your_yandex_webmaster_token
YANDEX_METRIKA_COUNTER_ID=101026698

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_telegram_chat_id

# Security
CORS_ORIGINS=https://pixel59.ru,https://www.pixel59.ru

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
